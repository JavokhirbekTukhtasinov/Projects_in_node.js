<%- include("partials/header")-%>

<form method="POST" action="/compose">
    <h1>Compose</h1>
    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="" class="form-control">
    <label for="composeContent">Content</label>
    <textarea name="composeContent" id="composeContent" cols="200" rows="10" value="" class="form-control"></textarea>
    <button type="submit" name="submit" class="btn btn-success">Publish</button>
    <button type="reset" name="reset" class="btn btn-info">Reset</button>
</form>
